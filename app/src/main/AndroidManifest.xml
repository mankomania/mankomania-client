<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- WebSocket / REST -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mankomaniaclient"
        tools:targetApi="31">

        <!-- Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Mankomaniaclient">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- In-app only: Welcome- & Game-UI -->
        <activity
            android:name=".com.example.mankomaniaclient.GameActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Mankomaniaclient" />

        <activity
            android:name=".LoadingActivity"
            android:exported="false"
            android:theme="@style/Theme.Mankomaniaclient"/>

        <activity
            android:name=".NameActivity"
            android:exported="false"
            android:label="Mankomania" />

        <activity
            android:name=".CreateLobbyActivity"
            android:exported="false"
            android:label="Mankomania" />

        <activity
            android:name=".JoinLobbyActivity"
            android:exported="false"
            android:label="Mankomania" />

        <activity
            android:name=".StartingMoneyActivity"
            android:exported="true"
            android:label="Mankomania"
            android:theme="@style/Theme.Mankomaniaclient" />
    </application>

</manifest>
